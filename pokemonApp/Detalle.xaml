<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="pokemonApp.Detalle">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="encabezado"/>
            <StackLayout Orientation="Vertical" Margin="20">
                <Label x:Name="name" Text="" XAlign="Center" Font="MarkerFelt-Thin,30"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="20">
                <Image x:Name="front_default" Source="" HeightRequest="100" WidthRequest="150"/>
                <Image x:Name="back_default" Source="" HeightRequest="100" WidthRequest="150"/>
            </StackLayout>
            
            <StackLayout Orientation="Vertical" Margin="20">
                <Label x:Name="height" Text="" XAlign="Center" Font="MarkerFelt-Thin,20"/>
                <Label x:Name="weight" Text="" XAlign="Center" Font="MarkerFelt-Thin,20"/>
            </StackLayout>
            
            <StackLayout Orientation="Vertical" Margin="20">
                <Button Command="{Binding HabCommand}" Text="Habilidades"  FontSize="Large" BackgroundColor="#2E93FB" TextColor="White"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
